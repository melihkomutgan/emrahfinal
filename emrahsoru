###5.soru#########

veriler=c(93,120,65,105,115,82,99,87,100,90,78,95,93,88,10,85,45,80,28,75,70,65,55,
          50,40,100,75,65,40,73,65,50,30,45,50,45,55,96,58,95,90,65,80,85,95,82)
siteler=c("site1","site1","site1","site1","site1","site1","site1","site1","site1",
          "site1","site1","site1","site1","site1","site1","site2","site2","site2",
          "site2","site2","site2","site2","site2","site2","site2","site3","site3",
          "site3","site3","site3","site3","site3","site3","site3","site3","site3",
          "site3","site4","site4","site4","site4","site4","site4","site4","site4",
          "site4")
df=data.frame(veriler,siteler)
boxplot(veriler~siteler, data = df)
veri.mean=tapply(df$veriler, INDEX = df$siteler, FUN = mean)
points(1:4, veri.mean, pch=4, cex=1.5

