#2. soru#########


random=randomnumbers(n=30,min=-20,max=20,col=1)
sum=0
for(number in random){
if(number%%3 == 0){
  sum = sum+number
}
}
paste(print(sum))




#3.soru##########

heights=c(1000,800,600,450,300,200,100)
distance=c(573,534,495,451,395,337,253)



df=data.frame(heights,distance)
plot(distance~heights, data = df)
lmmod=lm(distance~heights, data = df)
hatalar=lmmod$coefficients
hatalar
hatkartop=sum(lmmod$residuals^2)

y=df$heights
y


topdegisken=((y-mean(y))^2)
topdegisken


rekare=1-(hatkartop/topdegisken)
rekare


